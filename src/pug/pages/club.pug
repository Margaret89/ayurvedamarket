extends ../layout/main

block variables
	- var title = 'Клуб';

block content
	section.club
		.club__top
			img(src="assets/img/banner_club2.jpg", alt="")

		form.club-form
			.club-form__main
				.club-form__content
					.club-form__field
						input(type="text", placeholder='Имя')

					.club-form__field
						input(type="email", placeholder='Email')

					button(type='submit') Присоединиться
		
			.form-polit
				input(type="checkbox", id="polit")
				label.form-polit__label(for="polit") Подтверждаю свое согласие на <a href="#">обработку персональных данных</a>. 

		
		.club-list
			-
				var list=[
					{title:'Информация', text:'Полезные материалы и уникальный видео-контент в наших рассылках и крупнейшем аюрведическом сообществе ВКонтакте', link:'vk.com/all_ayurveda', link_text:'vk.com/all_ayurveda'},
					{color:'green', title:'Образование', text:'Семинары и вебинары с лучшими по аюрведе в рамках образовательной программы проекта «Вся Аюрведа»'},
					{color:'yellow', title:'Мероприятия', text:'Клубные встречи, мастер-классы, лекции, а так же информация обо всех аюрведических событиях в Росии - вы сможете быть в урсе всех новостей первыми', link:'https://ayurvedamarket.ru/club/#club_activity_form_id', link_text:'Записаться на ближайшее мероприятие '},
					{color:'red', title:'Партнеры', text:'Пользуйтесь аюрведичесими услугами, занимайтесь йогой, заглядывайте в кафе здорового питания - получайте скидки и специальные условия у наших партнеров'},
				]
			
			each item in list
				.club-list__item(class=item.color?'club-list__item_'+item.color:'')
					.club-list__title= item.title
					.club-list__text= item.text
					a(href=item.link).club-list__link= item.link_text

		.club-slider-wrap
			.club-slider.js-club-slider
				-
					var list=[
						'club_slider1.jpg',
						'club_slider2.jpg',
						'club_slider3.jpg',
						'club_slider4.jpg',
						'club_slider5.jpg',
						'club_slider6.jpg',
						'club_slider7.jpg',
						'club_slider8.jpg',
						'club_slider9.jpg',
						'club_slider10.jpg',
						'club_slider11.jpg',
						'club_slider12.jpg',
						'club_slider13.jpg',
					]

				each item in list
					.club-slider__item
						img(src="assets/img/"+item, alt="")
		
			.club-slider-play.js-club-slider-play
			.club-slider-pause.active.js-club-slider-pause

		.club-list
			-
				var list=[
					{color:'purple', title:'Распродажи', text:'Участвуйте в закрытых распродажах и акциях крупнейшего аюрведического интернет-магазина в Рунете Ayurvedamarket.ru', link:'javascript:void(0)', link_text:'Мне интересно'},
					{color:'pink', title:'Скидки', text:'Получайте скидки постоянных покупателей в Программе лояльности Ayurvedamarket.ru, которой пользуются тысячи наших клиентов.', link:'https://ayurvedamarket.ru/about_us/17963', link_text:'Узнать больше'},
				]
			
			each item in list
				.club-list__item(class=item.color?'club-list__item_'+item.color:'')
					.club-list__title= item.title
					.club-list__text= item.text
					a(href=item.link).club-list__link= item.link_text