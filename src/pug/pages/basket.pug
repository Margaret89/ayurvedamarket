extends ../layout/main

block variables
	- var title = 'Корзина';

block content
	section.basket
		.basket__content
			.basket__title Корзина покупок

			table.basket-table
				thead
					tr.basket-table__head
						th.basket-table__head-name Наименование
						th.basket-table__head-price Стоимость / Руб.
						th.basket-table__head-count Количество
						th.basket-table__head-sum Сумма / Руб.
						th.basket-table__head-del

				tbody
					-
						var list=[
							{img:'basket1.jpg', title:'Мёд болотный (Удмуртия) 1200 г', price:'990'},
							{img:'basket2.jpg', title:'Мёд болотный (Удмуртия) 1200 г', price:'2466'},
							{img:'basket3.jpg', title:'Чаванпраш Ройял 500 г, "ПроСвет"', price:'3630'},
							{img:'basket4.jpg', title:'Джем "Манибхадрам Лехьям" (MANIBHADRAM LEHYAM) 200 г, AISHWARYA', price:'525'},
						]

					each item in list
						tr
							td
								.basket-table__info
									a(href="#").basket-table__img(style="background-image: url(/assets/img/"+item.img+")")
									.basket-table__title
										a(href="#")= item.title

							td
								.basket-table__price= item.price

							td
								.counter
									.counter__minus –
									input.counter__field(type='text' value='1')
									.counter__plus +

							td
								.basket-table__sum= item.price

							td
								a(href="", title="Удалить").basket-table__del
									+svg('ic-close-circle','ic-close-circle', '12', '12')

				tfoot
					tr.basket-table__footer
						td
							.basket-table__label Итого:

						td(colspan="4")
							.basket-table-res 7611 
								span.basket-table-res__currency рублей

			.basket__bottom
				.coupon
					.coupon__label Промокод:

					.coupon__field
						input(type="text")

				a(href="#").btn.btn_big Оформить заказ

